<h2>Here are all the tasks in this category (@Model["category"].GetName()):</h2>

@if (@Model["tasks"].Count == 0)
{
  <p>No tasks have been added yet!</p>
}
else
{
  <ol>
    @foreach (var task in @Model["tasks"])
    {
      <li>@task.GetDescription(), @task.GetDueDate()</li>

    }
  </ol>
}

<form action='/categories/@Model["category"].GetId()/tasks/sort' method="post">
  <button type="submit">Sort tasks by due date</button>
</form>
<p><a href="/tasks/new">Add a new task</a></p>
<p><a href="/">Return to Main Page</a></p>
